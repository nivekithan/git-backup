{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "Node16",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "pretty": true,
    "module": "ES2022",
    "target": "ES2022"
  },
  "include": ["./src/**/*"]
}
